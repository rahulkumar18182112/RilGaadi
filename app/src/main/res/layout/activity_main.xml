<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#03272B"
    android:padding="2dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Rail Gaadi"
        android:textAlignment="center"
        style="@style/TextDesign"/>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Starting Point"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:background="#3446BD"/>
            <EditText
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint=" Enter Destination Point"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:background="#3446BD"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search"
                android:backgroundTint="#278DF1"/>


        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="180dp"
        android:layout_marginLeft="60dp"
        android:layout_width="300dp"
        android:layout_height="65dp"
        app:cardUseCompatPadding="true"
        android:padding="100dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#31ABED"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter the Train No./Name"

            android:textColorHint="@color/white"/>
        <Button
            android:layout_marginLeft="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go"
            android:backgroundTint="@color/teal_700"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="530dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:backgroundTint="#0288D1"
            android:textSize="12dp"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:backgroundTint="#0288D1"
            android:textSize="12dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Ask"
            android:backgroundTint="#0288D1"
            android:textSize="12dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="10dp"
            android:backgroundTint="#0288D1"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="585dp"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="#4F63E6">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Feedback"
            android:backgroundTint="#4F63E6"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:backgroundTint="#F3A04C"
            app:cardCornerRadius="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pnr Status"
                android:backgroundTint="#F3A04C"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:backgroundTint="#F3A04C"
            app:cardCornerRadius="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Running Status"
                android:backgroundTint="#F3A04C"
                app:cardCornerRadius="30dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>