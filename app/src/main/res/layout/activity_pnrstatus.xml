<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PNRstatus"
    android:background="#03272B">
    <LinearLayout
android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="50dp"
            android:backgroundTint="#F6AE35"
            app:cardUseCompatPadding="true"
            android:padding="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Enter PNR no."
                    android:textAlignment="center"
                    android:textSize="25dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:id="@+id/btnSearchRS"
                    android:backgroundTint="@color/teal_700"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="580dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1079E1">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:id="@+id/btnHomePnr"
            />

        <ImageButton
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/aboutusicon"
            android:scaleType="fitCenter"
            android:id="@+id/btnAboutPnr"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/askicon"
            android:scaleType="fitCenter"
            android:id="@+id/btnAskPnr"
            />
        <ImageButton
            android:layout_marginHorizontal="20dp"
            android:layout_width="80dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/accounticon"
            android:scaleType="fitCenter"
            android:id="@+id/btnAccountPnr"/>

    </LinearLayout>


</RelativeLayout>