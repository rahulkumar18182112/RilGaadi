<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ask"
    android:background="#03272B"
    android:orientation="vertical">
    <TextView android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ask a Question?"
    style="@style/TextDesign"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardUseCompatPadding="true"
            android:padding="80dp"
            app:cardCornerRadius="30dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:inputType="text"
                android:hint="Write down your Question.."
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_marginLeft="160dp"
            android:backgroundTint="#8C4444"/>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback..."
        style="@style/TextDesign"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="400dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardUseCompatPadding="true"
            android:padding="80dp"
            app:cardCornerRadius="30dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="text"
                android:hint="Type your feedback here..."
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_marginLeft="160dp"
            android:backgroundTint="#8C4444"/>

    </LinearLayout>
    <LinearLayout
        android:background="#1079E1"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:id="@+id/btnHomeAsk"
            />

        <ImageButton
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/aboutusicon"
            android:scaleType="fitCenter"
            android:id="@+id/btnAboutAsk"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/askicon"
            android:scaleType="fitCenter"
            android:id="@+id/btnAsk"
            />
        <ImageButton
            android:layout_marginHorizontal="20dp"
            android:layout_width="80dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:backgroundTint="#1079E1"
            android:src="@drawable/accounticon"
            android:scaleType="fitCenter"
            android:id="@+id/btnAccountAsk"/>

    </LinearLayout>
</RelativeLayout>